</div>

<style>
  .footer {
    display: flex;
    gap: 2rem;
    align-items: top;
    font-size: 0.65rem;
    font-weight: 300;
    text-transform: uppercase;
    margin-bottom: 2rem;
  }

  @media (max-width: 768px) {
    .footer {
      flex-direction: column;
      font-size: 0.75rem;
      gap: 1rem;
    }
  }

  .footer-logo {
    width: 250px;
  }

  @media (max-width: 768px) {
    .footer-logo {
      width: 100%;
      margin-bottom: 2rem;
    }
  }

  .footer-logo-wrap {
    flex-grow: 1;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    border-left: 1px solid var(--color-gray-light);
    gap: 0.5rem;
    padding-left: 1rem;
    padding-right: 2rem;
  }

  @media (max-width: 768px) {
    .footer-links {
      border-left: none;
      padding: 0;
      padding-bottom: 1rem;
      border-bottom: 1px solid var(--color-gray-light);
    }
  }

  .footer-links:last-child {
    border-right: none;
    padding-right: 0;
  }

  @media (max-width: 768px) {
    .footer-links:last-child {
      border-bottom: none;
    }
  }

  .footer-links > a {
    text-decoration: none;
    color: var(--color-text);
  }
</style>
